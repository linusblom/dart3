service cloud.firestore {
  match /databases/{database}/documents {
    match /accounts/{userId} {
      allow read, write: if request.auth.uid == userId;

      match /players/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }

      match /games/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }

      match /jackpots/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}