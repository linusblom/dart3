{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@envs/*": ["environments/*"],
      "@auth/*": ["app/auth/*"],
      "@shared/*": ["app/shared/*"],
      "@core/*": ["app/core/*"],
      "@player/*": ["app/player/*"],
      "@game/*": ["app/game/*"],
      "@utils/*": ["app/utils/*"],
      "@user/*": ["app/user/*"],
      "@jackpot/*": ["app/jackpot/*"],
      "@root/*": ["app/*"]
    }
  }
}
